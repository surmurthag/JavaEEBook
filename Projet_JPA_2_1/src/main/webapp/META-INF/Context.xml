		 -1 pour aucune limite -->

    <!-- maxIdle: Nombre maximum de connexions inutilisée dans le pool.
    	 -1 pour aucune limite -->

    <!-- maxWaitMillis: Nombre de millisecondes maximum d'attente d'une connexion disponible avant la levée d'une exception.
    	 -1 pour attendre indéfiniment -->

    <!-- username and password: compte d'accès MySQL  -->

    <!-- driverClassName: nom de la classe du pilote implémentant l'interface java.sql.Driver -->

    <!-- url: la chaine de connexion -->

  <Resource name="jdbc/pool_jpa" 
  			auth="Container" 
  			type="javax.sql.DataSource"
  			maxTotal="100" 
  			maxIdle="30" 
